{
  "title": "Bases HTML - Ma Première Page",
  "html": [
    "<!DOCTYPE html>",
    "<html lang=\"fr\">",
    "<head>",
    "    <meta charset=\"UTF-8\">",
    "    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">",
    "    <title>Ma Première Page</title>",
    "</head>",
    "<body>",
    "    <h1>Bienvenue sur ma page !</h1>",
    "    <p>Ceci est un paragraphe d'introduction.</p>",
    "    <ul>",
    "        <li>Premier élément de liste</li>",
    "        <li>Deuxième élément de liste</li>",
    "        <li>Troisième élément de liste</li>",
    "    </ul>",
    "    <a href=\"#\">Ceci est un lien</a>",
    "</body>",
    "</html>"
  ],
  "css": [
    "body {",
    "    font-family: Arial, sans-serif;",
    "    margin: 0;",
    "    padding: 20px;",
    "    background-color: #f5f5f5;",
    "}",
    "",
    "h1 {",
    "    color: #2c3e50;",
    "    text-align: center;",
    "    margin-bottom: 20px;",
    "}",
    "",
    "p {",
    "    color: #34495e;",
    "    line-height: 1.6;",
    "    margin-bottom: 15px;",
    "}",
    "",
    "ul {",
    "    background-color: white;",
    "    padding: 15px;",
    "    border-radius: 5px;",
    "    box-shadow: 0 2px 5px rgba(0,0,0,0.1);",
    "}",
    "",
    "a {",
    "    color: #3498db;",
    "    text-decoration: none;",
    "}",
    "",
    "a:hover {",
    "    text-decoration: underline;",
    "}"
  ],
  "javascript": [
    "// Bienvenue dans votre premier exercice JavaScript !",
    "console.log('Page chargée avec succès !');",
    "",
    "// Ajoutons un peu d'interactivité",
    "document.addEventListener('DOMContentLoaded', function() {",
    "    const titre = document.querySelector('h1');",
    "    ",
    "    titre.addEventListener('click', function() {",
    "        alert('Vous avez cliqué sur le titre !');",
    "    });",
    "    ",
    "    console.log('Événements ajoutés !');",
    "});"
  ]
}