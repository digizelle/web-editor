{
  "title": "JavaScript Interactif - Mini Jeu de Devinettes",
  "html": [
    "<div class=\"game-container\">",
    "    <h1>🎯 Jeu de Devinettes</h1>",
    "    <p class=\"instructions\">Je pense à un nombre entre 1 et 100. Pouvez-vous le deviner ?</p>",
    "    ",
    "    <div class=\"game-area\">",
    "        <div class=\"input-section\">",
    "            <input type=\"number\" id=\"guessInput\" min=\"1\" max=\"100\" placeholder=\"Votre nombre...\">",
    "            <button id=\"submitGuess\">Deviner !</button>",
    "        </div>",
    "        ",
    "        <div class=\"feedback\" id=\"feedback\">",
    "            <p>Entrez votre première tentative !</p>",
    "        </div>",
    "        ",
    "        <div class=\"stats\">",
    "            <div class=\"stat\">",
    "                <span class=\"stat-label\">Tentatives :</span>",
    "                <span id=\"attempts\">0</span>",
    "            </div>",
    "            <div class=\"stat\">",
    "                <span class=\"stat-label\">Meilleur score :</span>",
    "                <span id=\"bestScore\">-</span>",
    "            </div>",
    "        </div>",
    "        ",
    "        <button id=\"newGame\" class=\"new-game-btn\" style=\"display: none;\">Nouvelle Partie</button>",
    "    </div>",
    "    ",
    "    <div class=\"history\" id=\"history\">",
    "        <h3>Historique des tentatives</h3>",
    "        <ul id=\"historyList\"></ul>",
    "    </div>",
    "</div>"
  ],
  "css": [
    "* {",
    "    margin: 0;",
    "    padding: 0;",
    "    box-sizing: border-box;",
    "}",
    "",
    "body {",
    "    font-family: 'Arial', sans-serif;",
    "    background: linear-gradient(135deg, #74b9ff, #0984e3);",
    "    min-height: 100vh;",
    "    display: flex;",
    "    align-items: center;",
    "    justify-content: center;",
    "    padding: 20px;",
    "}",
    "",
    ".game-container {",
    "    background: white;",
    "    border-radius: 20px;",
    "    padding: 30px;",
    "    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);",
    "    max-width: 500px;",
    "    width: 100%;",
    "    text-align: center;",
    "}",
    "",
    "h1 {",
    "    color: #2d3436;",
    "    margin-bottom: 10px;",
    "    font-size: 2.5rem;",
    "}",
    "",
    ".instructions {",
    "    color: #636e72;",
    "    margin-bottom: 30px;",
    "    font-size: 1.1rem;",
    "}",
    "",
    ".game-area {",
    "    margin-bottom: 30px;",
    "}",
    "",
    ".input-section {",
    "    display: flex;",
    "    gap: 10px;",
    "    margin-bottom: 20px;",
    "    justify-content: center;",
    "}",
    "",
    "#guessInput {",
    "    padding: 12px 16px;",
    "    border: 2px solid #ddd;",
    "    border-radius: 10px;",
    "    font-size: 1.1rem;",
    "    width: 150px;",
    "    text-align: center;",
    "}",
    "",
    "#guessInput:focus {",
    "    outline: none;",
    "    border-color: #74b9ff;",
    "}",
    "",
    "#submitGuess {",
    "    padding: 12px 24px;",
    "    background: linear-gradient(45deg, #74b9ff, #0984e3);",
    "    color: white;",
    "    border: none;",
    "    border-radius: 10px;",
    "    font-size: 1.1rem;",
    "    cursor: pointer;",
    "    transition: transform 0.2s;",
    "}",
    "",
    "#submitGuess:hover {",
    "    transform: scale(1.05);",
    "}",
    "",
    ".feedback {",
    "    background: #f8f9fa;",
    "    border-radius: 10px;",
    "    padding: 15px;",
    "    margin-bottom: 20px;",
    "    min-height: 50px;",
    "    display: flex;",
    "    align-items: center;",
    "    justify-content: center;",
    "}",
    "",
    ".feedback.success {",
    "    background: #d4edda;",
    "    color: #155724;",
    "}",
    "",
    ".feedback.too-high {",
    "    background: #f8d7da;",
    "    color: #721c24;",
    "}",
    "",
    ".feedback.too-low {",
    "    background: #fff3cd;",
    "    color: #856404;",
    "}",
    "",
    ".stats {",
    "    display: flex;",
    "    justify-content: space-around;",
    "    margin-bottom: 20px;",
    "}",
    "",
    ".stat {",
    "    text-align: center;",
    "}",
    "",
    ".stat-label {",
    "    display: block;",
    "    color: #636e72;",
    "    font-size: 0.9rem;",
    "    margin-bottom: 5px;",
    "}",
    "",
    ".stat span:last-child {",
    "    font-size: 1.5rem;",
    "    font-weight: bold;",
    "    color: #2d3436;",
    "}",
    "",
    ".new-game-btn {",
    "    background: linear-gradient(45deg, #00b894, #00a085);",
    "    color: white;",
    "    border: none;",
    "    padding: 12px 24px;",
    "    border-radius: 10px;",
    "    font-size: 1.1rem;",
    "    cursor: pointer;",
    "    transition: transform 0.2s;",
    "}",
    "",
    ".new-game-btn:hover {",
    "    transform: scale(1.05);",
    "}",
    "",
    ".history {",
    "    background: #f8f9fa;",
    "    border-radius: 10px;",
    "    padding: 20px;",
    "    text-align: left;",
    "}",
    "",
    ".history h3 {",
    "    color: #2d3436;",
    "    margin-bottom: 15px;",
    "    text-align: center;",
    "}",
    "",
    "#historyList {",
    "    list-style: none;",
    "    max-height: 150px;",
    "    overflow-y: auto;",
    "}",
    "",
    "#historyList li {",
    "    padding: 5px 10px;",
    "    margin-bottom: 5px;",
    "    background: white;",
    "    border-radius: 5px;",
    "    font-size: 0.9rem;",
    "}"
  ],
  "javascript": [
    "// Jeu de devinettes interactif",
    "console.log('🎯 Jeu de Devinettes chargé !');",
    "",
    "class GuessingGame {",
    "    constructor() {",
    "        this.secretNumber = this.generateRandomNumber();",
    "        this.attempts = 0;",
    "        this.gameOver = false;",
    "        this.bestScore = localStorage.getItem('bestScore') || null;",
    "        ",
    "        this.initializeElements();",
    "        this.setupEventListeners();",
    "        this.updateDisplay();",
    "        ",
    "        console.log('Nombre secret généré:', this.secretNumber);",
    "    }",
    "    ",
    "    generateRandomNumber() {",
    "        return Math.floor(Math.random() * 100) + 1;",
    "    }",
    "    ",
    "    initializeElements() {",
    "        this.guessInput = document.getElementById('guessInput');",
    "        this.submitBtn = document.getElementById('submitGuess');",
    "        this.feedback = document.getElementById('feedback');",
    "        this.attemptsDisplay = document.getElementById('attempts');",
    "        this.bestScoreDisplay = document.getElementById('bestScore');",
    "        this.newGameBtn = document.getElementById('newGame');",
    "        this.historyList = document.getElementById('historyList');",
    "    }",
    "    ",
    "    setupEventListeners() {",
    "        this.submitBtn.addEventListener('click', () => this.makeGuess());",
    "        this.guessInput.addEventListener('keypress', (e) => {",
    "            if (e.key === 'Enter') this.makeGuess();",
    "        });",
    "        this.newGameBtn.addEventListener('click', () => this.startNewGame());",
    "    }",
    "    ",
    "    makeGuess() {",
    "        if (this.gameOver) return;",
    "        ",
    "        const guess = parseInt(this.guessInput.value);",
    "        ",
    "        if (isNaN(guess) || guess < 1 || guess > 100) {",
    "            this.showFeedback('Veuillez entrer un nombre entre 1 et 100 !', 'error');",
    "            return;",
    "        }",
    "        ",
    "        this.attempts++;",
    "        this.addToHistory(guess);",
    "        ",
    "        if (guess === this.secretNumber) {",
    "            this.handleWin();",
    "        } else if (guess < this.secretNumber) {",
    "            this.showFeedback(`${guess} est trop petit ! Essayez plus grand.`, 'too-low');",
    "        } else {",
    "            this.showFeedback(`${guess} est trop grand ! Essayez plus petit.`, 'too-high');",
    "        }",
    "        ",
    "        this.updateDisplay();",
    "        this.guessInput.value = '';",
    "        this.guessInput.focus();",
    "    }",
    "    ",
    "    handleWin() {",
    "        this.gameOver = true;",
    "        this.showFeedback(`🎉 Bravo ! Vous avez trouvé ${this.secretNumber} en ${this.attempts} tentative(s) !`, 'success');",
    "        ",
    "        // Mettre à jour le meilleur score",
    "        if (!this.bestScore || this.attempts < this.bestScore) {",
    "            this.bestScore = this.attempts;",
    "            localStorage.setItem('bestScore', this.bestScore);",
    "            this.showFeedback(`🎉 Nouveau record ! Vous avez trouvé ${this.secretNumber} en ${this.attempts} tentative(s) !`, 'success');",
    "        }",
    "        ",
    "        this.submitBtn.style.display = 'none';",
    "        this.newGameBtn.style.display = 'inline-block';",
    "        this.guessInput.disabled = true;",
    "        ",
    "        console.log('Partie terminée ! Tentatives:', this.attempts);",
    "    }",
    "    ",
    "    showFeedback(message, type) {",
    "        this.feedback.innerHTML = `<p>${message}</p>`;",
    "        this.feedback.className = `feedback ${type}`;",
    "    }",
    "    ",
    "    addToHistory(guess) {",
    "        const li = document.createElement('li');",
    "        let result = '';",
    "        ",
    "        if (guess === this.secretNumber) {",
    "            result = '🎯 Trouvé !';",
    "        } else if (guess < this.secretNumber) {",
    "            result = '⬆️ Trop petit';",
    "        } else {",
    "            result = '⬇️ Trop grand';",
    "        }",
    "        ",
    "        li.textContent = `Tentative ${this.attempts}: ${guess} - ${result}`;",
    "        this.historyList.appendChild(li);",
    "        ",
    "        // Faire défiler vers le bas",
    "        this.historyList.scrollTop = this.historyList.scrollHeight;",
    "    }",
    "    ",
    "    updateDisplay() {",
    "        this.attemptsDisplay.textContent = this.attempts;",
    "        this.bestScoreDisplay.textContent = this.bestScore || '-';",
    "    }",
    "    ",
    "    startNewGame() {",
    "        this.secretNumber = this.generateRandomNumber();",
    "        this.attempts = 0;",
    "        this.gameOver = false;",
    "        ",
    "        this.showFeedback('Nouvelle partie ! Entrez votre première tentative.', '');",
    "        this.updateDisplay();",
    "        ",
    "        this.submitBtn.style.display = 'inline-block';",
    "        this.newGameBtn.style.display = 'none';",
    "        this.guessInput.disabled = false;",
    "        this.guessInput.focus();",
    "        ",
    "        // Vider l'historique",
    "        this.historyList.innerHTML = '';",
    "        ",
    "        console.log('Nouvelle partie ! Nouveau nombre secret:', this.secretNumber);",
    "    }",
    "}",
    "",
    "// Initialiser le jeu quand la page est chargée",
    "document.addEventListener('DOMContentLoaded', function() {",
    "    const game = new GuessingGame();",
    "    console.log('Jeu initialisé avec succès !');",
    "});"
  ]
}